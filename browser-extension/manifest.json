{
  "manifest_version": 3,
  "name": "AI Safe Network Guard",
  "version": "1.0",
  "description": "Displays risk scores for links and blocks risky URLs when background analysis is active.",
  "permissions": ["activeTab", "scripting", "storage", "notifications"],
  "host_permissions": ["<all_urls>", "http://localhost:3000/*", "https://ai-safe-network-backend.onrender.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
